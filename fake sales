        ob_start(); ?>
        <style>
        /* Woodmart Theme Compatibility */
        .support-ticket-system-wrapper {
            font-family: inherit !important;
        }

        .support-ticket-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            font-family: inherit;
        }

        .support-ticket-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 40px rgba(0,0,0,0.12);
            padding: 50px;
            margin-bottom: 30px;
            border: 1px solid #e1e8ed;
            position: relative;
            overflow: hidden;
        }

        .support-ticket-card::before {
            content: '';
