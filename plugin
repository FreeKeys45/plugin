                    <i class="fas fa-plus"></i>
                    Create Ticket
                </button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuToggle = document.getElementById('mobileMenuToggle');
            const sidebar = document.getElementById('sidebar');
            
            mobileMenuToggle.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });
            
            // Navigation
            const menuItems = document.querySelectorAll('.menu-item');
            const pageContents = document.querySelectorAll('.page-content');
            
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remove active class from all menu items and page contents
                    menuItems.forEach(i => i.classList.remove('active'));
                    pageContents.forEach(p => p.classList.remove('active'));
                    
                    // Add active class to clicked menu item
                    this.classList.add('active');
                    
                    // Show corresponding page content
                    const pageId = this.getAttribute('data-page') + '-page';
                    const pageContent = document.getElementById(pageId);
                    if (pageContent) {
                        pageContent.classList.add('active');
                    }
                    
                    // Close mobile menu
                    sidebar.classList.remove('active');
                });
            });
            
            // Ticket view buttons
            const viewTicketButtons = document.querySelectorAll('[data-ticket-id]');
            viewTicketButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Hide all page contents
                    pageContents.forEach(p => p.classList.remove('active'));
                    
                    // Show ticket detail page
                    const ticketDetailPage = document.getElementById('ticket-detail-page');
                    if (ticketDetailPage) {
                        ticketDetailPage.classList.add('active');
                    }
                    
                    // Update active menu item
                    menuItems.forEach(i => i.classList.remove('active'));
                    const ticketsMenuItem = document.querySelector('[data-page="tickets"]');
                    if (ticketsMenuItem) {
                        ticketsMenuItem.classList.add('active');
                    }
                });
            });
            
            // Back to tickets button
            const backToTicketsBtn = document.getElementById('backToTickets');
            if (backToTicketsBtn) {
                backToTicketsBtn.addEventListener('click', function() {
                    // Hide ticket detail page
                    const ticketDetailPage = document.getElementById('ticket-detail-page');
                    if (ticketDetailPage) {
                        ticketDetailPage.classList.remove('active');
                    }
                    
                    // Show tickets page
                    const ticketsPage = document.getElementById('tickets-page');
                    if (ticketsPage) {
                        ticketsPage.classList.add('active');
                    }
                });
            }
            
            // Tab navigation
            const tabBtns = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Remove active class from all tab buttons and contents
                    tabBtns.forEach(b => b.classList.remove('active'));
                    tabContents.forEach(c => c.classList.remove('active'));
                    
                    // Add active class to clicked tab button
                    this.classList.add('active');
                    
                    // Show corresponding tab content
                    const tabContent = document.getElementById(tabId);
                    if (tabContent) {
                        tabContent.classList.add('active');
                    }
                });
            });
            
            // Filter dropdown
            const filterBtn = document.getElementById('filterBtn');
            const filterMenu = document.getElementById('filterMenu');
            
            if (filterBtn && filterMenu) {
                filterBtn.addEventListener('click', function() {
                    filterMenu.classList.toggle('active');
                });
                
                // Close filter menu when clicking outside
                document.addEventListener('click', function(e) {
                    if (!filterBtn.contains(e.target) && !filterMenu.contains(e.target)) {
                        filterMenu.classList.remove('active');
                    }
                });
            }
            
            // New ticket modal
            const newTicketBtn = document.getElementById('newTicketBtn');
            const newTicketBtn2 = document.getElementById('newTicketBtn2');
            const newTicketModal = document.getElementById('newTicketModal');
            const closeNewTicketModal = document.getElementById('closeNewTicketModal');
            const cancelNewTicket = document.getElementById('cancelNewTicket');
            const createTicket = document.getElementById('createTicket');
            const newTicketForm = document.getElementById('newTicketForm');
            
            function openNewTicketModal() {
                if (newTicketModal) {
                    newTicketModal.classList.add('active');
                }
            }
            
            function closeNewTicketModalFunc() {
                if (newTicketModal) {
                    newTicketModal.classList.remove('active');
                    if (newTicketForm) {
                        newTicketForm.reset();
                    }
                }
            }
            
            if (newTicketBtn) {
                newTicketBtn.addEventListener('click', openNewTicketModal);
            }
            
            if (newTicketBtn2) {
                newTicketBtn2.addEventListener('click', openNewTicketModal);
            }
            
            if (closeNewTicketModal) {
                closeNewTicketModal.addEventListener('click', closeNewTicketModalFunc);
            }
            
            if (cancelNewTicket) {
                cancelNewTicket.addEventListener('click', closeNewTicketModalFunc);
            }
            
            if (createTicket) {
                createTicket.addEventListener('click', function() {
                    // Generate a 6-digit random ticket ID
                    const ticketId = Math.floor(100000 + Math.random() * 900000);
                    
                    // In a real application, you would submit the form data to a server here
                    alert(`Ticket #${ticketId} created successfully!`);
                    
                    // Close modal and reset form
                    closeNewTicketModalFunc();
                    
                    // Redirect to the ticket detail page
                    pageContents.forEach(p => p.classList.remove('active'));
                    const ticketDetailPage = document.getElementById('ticket-detail-page');
                    if (ticketDetailPage) {
                        ticketDetailPage.classList.add('active');
                    }
                    
                    // Update active menu item
                    menuItems.forEach(i => i.classList.remove('active'));
                    const ticketsMenuItem = document.querySelector('[data-page="tickets"]');
                    if (ticketsMenuItem) {
                        ticketsMenuItem.classList.add('active');
                    }
                });
            }
            
            // Close modal when clicking outside
            document.addEventListener('click', function(e) {
                if (newTicketModal && e.target === newTicketModal) {
                    closeNewTicketModalFunc();
                }
            });
            
            // Form submission for reply
            const replyForm = document.querySelector('.reply-form');
            if (replyForm) {
                replyForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // In a real application, you would submit the form data to a server here
                    alert('Reply sent successfully!');
                    
                    // Reset form
                    this.reset();
                });
            }
            
            // Settings form submission
            const settingsForms = document.querySelectorAll('#settings-page form');
            settingsForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // In a real application, you would submit the form data to a server here
                    alert('Settings saved successfully!');
                });
            });
        });
    </script>
</body>
</html>
